<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/colorSurfaceContainer"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorSurfaceContainer"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        app:statusBarScrim="@color/transparent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="?attr/colorSurfaceContainer"
            android:fitsSystemWindows="true"
            android:gravity="top"
            android:minHeight="?android:attr/actionBarSize"
            app:layout_collapseMode="parallax" />

        <com.drdisagree.colorblendr.ui.views.HeaderTextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.03"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="?attr/colorPrimary"
            android:textSize="36dp"
            android:textStyle="bold"
            customfontdemo:fontName="Sticky_Sans.otf"
            tools:ignore="SpUsage" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="?attr/colorSurfaceContainer"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="?android:attr/actionBarSize"
            android:tintMode="src_atop"
            app:barrierDirection="start"
            app:tabBackground="@android:color/transparent"
            app:tabGravity="fill"
            app:tabIndicatorAnimationMode="elastic"
            app:tabIndicatorColor="?attr/colorPrimary"
            app:tabIndicatorFullWidth="true"
            app:tabMode="fixed"
            app:tabRippleColor="?attr/colorControlHighlight"
            app:tabSelectedTextColor="?attr/colorPrimary"
            app:tabTextAppearance="?attr/textAppearanceTitleMedium"
            app:tabTextColor="?attr/colorOnSurface"
            app:tint="?attr/colorOnSurface" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>